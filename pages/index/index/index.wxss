/* pages/index/index/index.wxss */
.card {
  -webkit-font-smoothing: antialiased;
  background-color: #fff;
  margin-bottom: 30rpx;
  overflow: hidden;
  color: #333;
  width: 100%; 
  display: -webkit-box;
}
.card .title {
  font-size: 16px;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.card .left {
  margin-right: 20rpx;
}
.card .left .thumbnail {
  width: 240rpx;
  height: 240rpx;
  background-color: #eee;
}
.card .right {
  -webkit-box-orient: vertical;
  -webkit-box-flex: 1;
}
.card .right .intro {
  line-height: 1.3;
  font-size: 14px;
  margin: 10rpx 0 30rpx 0;
  font-family: HelveticaNeue-Light;
  overflow: hidden;
  color: #666;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.card .right .info {
  font-size: 10px;
  color: #666;
  opacity: 0.8;
  margin-top: 10rpx;
  font-family: 'iconfont';
}
.card .right .info .views {
  margin-left: 30rpx;
}
.card .right .info .cuIcon-add {
  float:right;
  font-size:24px;
  font-weight:bold;
}